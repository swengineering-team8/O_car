      <%-include('slides.ejs') %>
      <div style="width: 500px; height:100px; float:right">
        <img src="\images\popular.PNG" />
      </div>
      <div class="list-group w-auto container">
        <div class="col-md-6">
          <h3 class="mb-5 text-center">공지사항</h3>
