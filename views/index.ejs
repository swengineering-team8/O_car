              <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                  <h6 class="mb-0"><%= rows[i].notice_title %></h6>
                  <p class="mb-0 opacity-75"><%= rows[i].notice_content %></p>
                </div>
                <small class="opacity-50 text-nowrap"><%= rows[i].notice_time %></small>
              </div>
            </a>
          <% } %>
        </div>
